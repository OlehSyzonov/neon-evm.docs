{
  "type": "object",
  "description": "Response to request for transaction gas price",
  "required": [
    "jsonrpc",
    "id",
    "result"
  ],
  "properties": {
    "jsonrpc": {
      "type": "string",
      "default": "2.0",
      "description": "The JSON RPC version"
    },
    "id": {
      "type": "string",
      "examples": [
        "OpEgqw7r98qwerqwehkjhwe8"
      ],
      "description": "End-user provided identifier for the request"
    },
    "result": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "gas_price": {
            "description": "Gas fee as hexadecimal value in Galan (NEON).",
            "type": "string",
            "format": "hexadecimal",
            "examples": [
              "0x0"
            ]
          },
          "suggested_gas_price": {
            "description": "Suggested gas price as hexadecimal value in Galan (NEON).",
            "type": "string",
            "format": "hexadecimal",
            "examples": [
              "0x10c2c383c6"
            ]
          },
          "min_acceptable_gas_price": {
            "description": "Minimum acceptable gas price as hexadecimal value in Galan (NEON).",
            "type": "string",
            "format": "hexadecimal",
            "examples": [
              "0x3b9aca00"
            ]
          },
          "min_executable_gas_price": {
            "description": "Minimum executable gas price as hexadecimal value in Galan (NEON).",
            "type": "string",
            "format": "hexadecimal",
            "examples": [
              "0x109c1bb304"
            ]
          },
          "min_wo_chainid_acceptable_gas_price": {
            "description": "Minimum gas price without chain ID as hexadecimal value in Galan (NEON).",
            "type": "string",
            "format": "hexadecimal",
            "examples": [
              "0x2540be400"
            ]
          },
          "allow_underpriced_tx_wo_chainid": {
            "description": "Allow underpriced transactions without chain ID as hexadecimal value in Galan (NEON).",
            "type": "boolean",
            "examples": [
              true
            ]
          },
          "accept_reverted_tx_into_mempool": {
            "description": "Accept reverted transactions into mempool as hexadecimal value in Galan (NEON).",
            "type": "boolean",
            "examples": [
              false
            ]
          },
          "sol_price_usd": {
            "description": "Sol price in USD as hexadecimal value.",
            "type": "number",
            "examples": [
              "0x656"
            ]
          },
          "neon_price_usd": {
            "description": "Neon price in USD as hexadecimal value.",
            "type": "number",
            "examples": [
              "0x19"
            ]
          },
          "operator_fee": {
            "description": "Operator fee as hexadecimal value in Galan (NEON).",
            "type": "number",
            "examples": [
              "0x3e8"
            ]
          },
          "gas_price_slippage": {
            "description": "Gas price slippage as hexadecimal value in Galan (NEON).",
            "type": "number",
            "examples": [
              "0x64"
            ]
          }
        }
      }
    }
  },
  "x-examples": [
    {
      "title": "Simple response",
      "jsonrpc": "2.0",
      "id": "8423kljlj439",
      "result": "0x10c4cf9e80"
    },
    {
      "title": "Detailed response",
      "jsonrpc": "2.0",
      "id": "6423kljlj439",
      "result": [
        {
          "gas_price": "0x0",
          "suggested_gas_price": "0x10c2c383c6",
          "min_acceptable_gas_price": "0x3b9aca00",
          "min_executable_gas_price": "0x109c1bb304",
          "min_wo_chainid_acceptable_gas_price": "0x2540be400",
          "allow_underpriced_tx_wo_chainid": true,
          "accept_reverted_tx_into_mempool": false,
          "sol_price_usd": "0x656",
          "neon_price_usd": "0x19",
          "operator_fee": "0x3e8",
          "gas_price_slippage": "0x64"
        }
      ]
    }
  ]
}